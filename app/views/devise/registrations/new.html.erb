<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false } ) do |f| %>

  <div class="text-center">
    <h1>Sign up</h1>
    <label>Registrations are only for CITE Students</label>
  </div>
  <form>

    <div class="form-group">
      <label>Student ID</label>
      <div class="field">
        <%= f.text_field :student_id, autofocus: true, autocomplete: "off", :class => "form-control", :placeholder => "Student ID" %>
      </div>
    </div>        

    <div class="form-group">
      <label>First Name</label>
      <div class="field">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "off", :class => "form-control", :placeholder => "First name" %>
      </div>
    </div>

    <div class="form-group">
      <label>Middle Name</label>
      <div class="field">
        <%= f.text_field :middle_name, autofocus: true, autocomplete: "off", :class => "form-control", :placeholder => "Middle name" %>
      </div>
    </div>    

    <div class="form-group">
      <label>Last Name</label>
      <div class="field">
        <%= f.text_field :last_name, autofocus: true, autocomplete: "off", :class => "form-control", :placeholder => "Last name" %>
      </div>
    </div>         


    <div class="form-group">
      <label>Email address</label>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :placeholder => "Enter Email" %>
      </div>
    </div>

    <div class="form-group">
      <label>Password</label>
      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", :class => "form-control", :placeholder => "Password" %>
      </div>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
    </div>

    <div class="form-group">
      <label>Confirm Password</label>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control", :placeholder => "Confirm Password" %>
      </div>
    </div>
    <div class="errors"><%= devise_error_messages! %></div>
    <div class="actions">
      <div class="d-grid gap-2">
        <%= f.submit "Sign up", :class => "btn btn-primary mb-4" %>
      </div>
    </div>
    
    <%= link_to "Already have an account? Log in here", user_session_path	, :class => "text-black mt-4"	%>

  </form>


<% end %>
