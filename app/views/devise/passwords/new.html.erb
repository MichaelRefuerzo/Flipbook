<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: {turbo: false } }) do |f| %>

<div class="container">
  <div class="row">
    <div class="row mt-3"></div>
    <div class="col-md-6 mx-auto">
      <div class="card-flipbook">
        <div class="text-center">
          <h1>Forgot password?</h1>
        </div>
        <form>
        
          <div class="form-group">
            <label>Email address</label>
              <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :placeholder => "Enter Email" %>
            </div>
          </div>
          <div class="errors"><%= devise_error_messages! %></div>
          <div class="actions">
            <%= f.submit "Send me reset password instructions", :class => "btn btn-primary mt-4" %>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<% end %>
